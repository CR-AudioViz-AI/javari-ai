{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "fluid": true,
  "regions": ["iad1", "sfo1"],
  "functions": {
    "app/api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 30
    },
    "app/api/chat/**/*.ts": {
      "memory": 3008,
      "maxDuration": 120
    },
    "app/api/ai/**/*.ts": {
      "memory": 3008,
      "maxDuration": 120
    },
    "app/api/javari/**/*.ts": {
      "memory": 2048,
      "maxDuration": 60
    },
    "app/api/cron/**/*.ts": {
      "memory": 1024,
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/web-crawl",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/javari/learn-from-docs",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/javari/health",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/self-healing",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/continuous-learning",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/warmup",
      "schedule": "*/3 * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/chat/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        }
      ]
    }
  ]
}
